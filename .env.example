# 项目名称（用于容器命名和网络命名）
COMPOSE_PROJECT_NAME=context-ref

# ChromaDB 配置
CHROMADB_IMAGE=chromadb/chroma:latest
CHROMADB_MODE=client
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_AUTH_PROVIDER=
CHROMADB_AUTH_CREDENTIALS_PROVIDER=

# Redis 配置
REDIS_IMAGE=redis/redis-stack-server:latest
REDIS_HOST=localhost
REDIS_PORT=6379

# 应用配置
APP_PORT=8080
PYTHONPATH=/app
LOG_LEVEL=INFO

# 构建配置（可选）
BUILD_CONTEXT=.
BUILD_DOCKERFILE=Dockerfile

# 健康检查配置（可选）
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=5
